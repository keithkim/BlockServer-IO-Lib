<project name="IO-Lib" basedir="." default="main">
	<property name="src.dir" value="src"/>
	<property name="lib.dir" value="lib"/>
	<property name="build.dir" value="build"/>

	<property name="classes.dir" value="${build.dir}/classes"/>
	<property name="jar.dir" value="${build.dir}/jars"/>
	<property name="expjar.dir" value=".."/>

	<path id="libpath">
		<fileset dir="${lib.dir}" includes="**/*.jar"/>
	</path>

	<target name="compile">
		<mkdir dir="${classes.dir}"/>
		<javac srcdir="${src.dir}/java" destdir="${classes.dir}" classpathref="libpath"/>
	</target>
	<target name="expjarparent" depends="compile">
		<jar destfile="${jar.dir}/${ant.project.name}.jar" basedir="${classes.dir}">
			<zipfileset dir="resources" includes="." prefix="resources"/>
			<fileset dir="." includes="resources/**" />
		</jar>
	</target>
</project>
